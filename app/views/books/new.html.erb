<div class="container mt-5">
  <h1>New Book</h1>

  <%= form_with(model: @book, local: true, class: 'mt-4', html: { multipart: true }) do |form| %>
    <% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', style: 'width: 600px;' %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control', rows: 5, style: 'width: 600px;' %>
    </div>
    
    <div class="mb-3">
      <%= form.label :category_ids, "Categories" %>
      <%= form.collection_select :category_ids, Category.all, :id, :name, { multiple: true, prompt: "Select categories" }, { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= form.label :image, 'Image', class: 'form-label' %>
      <%= form.file_field :image, class: 'form-control', style: 'width: 600px;' %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Create Book', class: 'btn btn-primary' %>
      <%= link_to 'Back', root_path, class: 'btn btn-secondary ms-2' %>
    </div>
  <% end %>
</div>
